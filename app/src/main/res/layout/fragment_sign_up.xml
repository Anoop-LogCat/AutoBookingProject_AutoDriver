<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:orientation="horizontal">
              <ImageView
                  android:id="@+id/signUpBackButton"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_gravity="center"
                  android:src="@drawable/icon_backwardarrow"/>
              <TextView
                  android:id="@+id/title_signUp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:layout_marginLeft="20dp"
                  android:layout_gravity="center"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:text="@string/create_account"/>

          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="80dp"
                android:layout_marginTop="150dp"
                android:orientation="vertical"
                android:background="@drawable/authpagecontainer">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:contentDescription="image"
                            android:src="@drawable/icon_stand_loc"/>
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/signUpAutoStandSelection"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:background="@android:color/transparent" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_phone"/>
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/signUpPhone"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:hint="@string/phone_number" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_person" />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="1dp"/>
                        <EditText
                            android:id="@+id/signUpUserName"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            style="@style/Widget.AppCompat.EditText"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:inputType="text"
                            android:background="@android:color/transparent"
                            android:hint="@string/user_name" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_age"/>
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="1dp"/>
                        <EditText
                            android:id="@+id/signUpAge"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            style="@style/Widget.AppCompat.EditText"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="number"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:hint="@string/your_age" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_number"/>
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="1dp"/>
                        <EditText
                            android:id="@+id/signUpAutoNum"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="text"
                            android:background="@android:color/transparent"
                            android:hint="@string/auto_number_kl_00_0000" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/workingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/working_time"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="30dp"
                        card_view:cardElevation="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/image"
                                android:src="@drawable/icon_timeon"/>
                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp"/>
                            <TextView
                                android:id="@+id/signUpOpenTime"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textColorHint="@color/colorPrimaryDark"
                                android:background="@android:color/transparent"
                                android:hint="@string/start" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="1dp"/>
                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="30dp"
                        card_view:cardElevation="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/image"
                                android:src="@drawable/icon_timeoff"/>
                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp"/>
                            <TextView
                                android:id="@+id/signUpCloseTime"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textColorHint="@color/colorPrimaryDark"
                                android:background="@android:color/transparent"
                                android:hint="@string/end" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/SignUpSubmitButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/authbutton">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_forwardarrow"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>